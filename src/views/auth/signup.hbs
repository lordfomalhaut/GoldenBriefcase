<div class="bg-cont-signup uk-background-cover uk-height-medium uk-panel uk-flex uk-flex-center uk-flex-middle">
    <h2 class="signup-phrase">
        Registrate para disfrutar del contenido que comparten otros usuarios.
    </h2>
    <div class="container p-4 container-cont">
        <div class="row pt-5 row-container uk-position-right">
            <div class="col-md-6 mx-auto sup-cont-sign">
                <div class="card text-center container-sign">
                    <div class="card-header">
                        <h3>Registro de usuarios</h3>
                    </div>
                    <div class="card-body">
                        <form action="/signup" method="POST">

                            <div class="uk-margin">
                                <div class="uk-inline">
                                    <span class="uk-form-icon" uk-icon="icon: user"></span>
                                    <input class="uk-input" name="username"  type="text">
                                </div>
                            </div>
                            <div class="uk-margin">
                                <div class="uk-inline">
                                    <span class="uk-form-icon" uk-icon="icon: mail"></span>
                                    <input class="uk-input" name="email" type="text">
                                </div>
                            </div>
                            <div class="uk-margin">
                                <div class="uk-inline">
                                    <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                    <input class="uk-input" name="password" type="password">
                                </div>
                            </div>
                            <div class="uk-margin">
                                <button class="uk-button uk-button-default btn-login">Registrar</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>