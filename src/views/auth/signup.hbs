<div class="container p-4 container-cont">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center container-sign">
                <div class="card-header">
                    <h3>Registro de usuarios</h3>
                </div>
                <div class="card-body">
                    <form action="/signup" method="POST">

                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon" uk-icon="icon: user"></span>
                                <input class="uk-input" name="username"  type="text">
                            </div>
                        </div>
                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon" uk-icon="icon: mail"></span>
                                <input class="uk-input" name="email" type="text">
                            </div>
                        </div>
                        <div class="uk-margin">
                            <div class="uk-inline">
                                <span class="uk-form-icon" uk-icon="icon: lock"></span>
                                <input class="uk-input" name="password" type="password">
                            </div>
                        </div>
                        <div class="uk-margin">
                            <button class="uk-button uk-button-default btn-login">Registrar</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>